{
  "name": "Mojo",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "NVIM_VERSION": "v0.10.4"
    }
  },
  "remoteUser": "chriswrendev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "mounts": [
    "type=bind,source=${localEnv:HOME}/.config/nvim,target=/home/chriswrendev/.config/nvim,consistency=cached",
    "type=volume,source=${localWorkspaceFolderBasename}-pixi-cache,target=/home/chriswrendev/.cache/pixi"
  ],

  "containerEnv": {
    "PIXI_CACHE_DIR": "/home/chriswrendev/.cache/pixi"
  },

  "postCreateCommand": "pixi install && pixi run mojo --version",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash" }
        },
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "modular-mojotools.vscode-mojo"
      ]
    }
  }

}
